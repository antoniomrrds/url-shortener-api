{
  "name": "url-shortener-api",
  "version": "0.0.1",
  "description": "Rest Node.js API using TDD, clean architecture, and Typescript.",
  "main": "index.js",
  "scripts": {
    "start": "node -r dotenv/config dist/main/server.js",
    "dev": "ts-node-dev -r dotenv/config --respawn --transpile-only --inspect=0.0.0.0:9229 src/main/server.ts",
    "clean": "npm prune",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 0",
    "test": "jest --colors --passWithNoTests --runInBand",
    "test:watch": "npm test -- --watch",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:ci:silent": "npm test -- --coverage --silent",
    "prepare": "husky",
    "docker:down": "docker-compose down",
    "docker:up": "docker-compose up -d",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "docker:dropAll": "docker stop $(docker ps -a -q) && docker system prune -f",
    "docker:dropAll:images": "docker rmi $(docker images -a -q)",
    "typeorm": "ts-node-dev -r dotenv/config -r tsconfig-paths/register -r module-alias/register ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm migration:run -- -d src/infrastructure/typeorm/config/data-source-config.ts",
    "migration:create": "npm run typeorm migration:create",
    "migration:revert": "npm run typeorm migration:revert -- -d src/infrastructure/typeorm/config/data-source-config.ts"
  },
  "keywords": [
    "clean architecture",
    "tdd",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Antonio marcos",
    "email": "antoniomarcos.amrrds@gmail.com"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pg-mem": "^2.8.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "module-alias": "^2.2.3",
    "nanoid": "^3.3.7",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "validator": "^13.11.0"
  }
}
