{
  "name": "url-shortener-api",
  "version": "0.0.1",
  "description": "Rest Node.js API using TDD, clean architecture, and Typescript.",
  "main": "index.js",
  "scripts": {
    "clean": "npm prune",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 0",
    "test": "jest --colors --passWithNoTests --runInBand",
    "test:watch": "npm test -- --watch",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:ci:silent": "npm test -- --coverage --silent",
    "prepare": "husky"
  },
  "keywords": [
    "clean architecture",
    "tdd",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Antonio marcos",
    "email": "antoniomarcos.amrrds@gmail.com"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pg-mem": "^2.8.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "module-alias": "^2.2.3",
    "nanoid": "^3.3.7",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20"
  }
}
